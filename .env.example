# =============================================================================
# DeFi Liquidation Alerter - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# Lines starting with # are comments and can be left as-is.

# -----------------------------------------------------------------------------
# REQUIRED: Telegram Bot Configuration
# -----------------------------------------------------------------------------
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# -----------------------------------------------------------------------------
# REQUIRED: RPC Configuration
# -----------------------------------------------------------------------------
# Primary Ethereum RPC URL (required - other chains fall back to this if not set)
# Recommended providers: Alchemy, Infura, QuickNode
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key_here

# Chain-specific RPC URLs (optional - improves performance for multi-chain monitoring)
# If not set, ETHEREUM_RPC_URL will be used (won't work for L2 chains)
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your_api_key_here
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your_api_key_here
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/your_api_key_here

# -----------------------------------------------------------------------------
# OPTIONAL: Database Configuration
# -----------------------------------------------------------------------------
# SQLite (default - good for development and single-instance deployment)
DATABASE_URL=sqlite+aiosqlite:///./liquidation_alerter.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/liquidation_alerter

# -----------------------------------------------------------------------------
# OPTIONAL: Monitoring Configuration
# -----------------------------------------------------------------------------
# How often to check positions (in seconds)
# Lower values = more responsive but higher RPC costs
MONITORING_INTERVAL_SECONDS=60

# Health factor threshold for warning alerts (default: 1.5)
# Alerts trigger when HF drops below this value
HEALTH_FACTOR_THRESHOLD=1.5

# Critical health factor threshold for urgent alerts (default: 1.1)
# Position is at high risk of liquidation below this value
CRITICAL_HEALTH_FACTOR_THRESHOLD=1.1

# -----------------------------------------------------------------------------
# OPTIONAL: Metrics Configuration
# -----------------------------------------------------------------------------
# Port for Prometheus metrics endpoint (/metrics) and health checks (/health)
METRICS_PORT=8080
